<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= title %></title>
  <link rel='stylesheet' href='/stylesheets/style.css'/>
  <!-- 합쳐지고 최소화된 최신 CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
  <!-- 부가적인 테마 -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css">
  <!-- 합쳐지고 최소화된 최신 자바스크립트 -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
  <script src="/javascripts/jquery-1.11.2.min.js"></script>
  <script>
    $(function () {
      $('#btn_join').on('click', function () {
        if($('#id').val() == ""){
          alert('아이디를 꼭 입력하세요!');
          $('#id').focus();
          return;
        }
        if($('#passwd').val() == ""){
          alert('패스워드를 꼭 입력하세요!');
          $('#passwd').focus();
          return;
        }
        if($('#name').val() == ""){
          alert('이름을 꼭 입력하세요!');
          $('#name').focus();
          return;
        }
        if($('#email').val() == ""){
          alert('이메일을 꼭 입력하세요!');
          $('#email').focus();
          return;
        }
        if($('#tel2').val() == ""){
          alert('전화번호를 정확히 입력해주세요!');
          $('#tel2').focus();
          return;
        }
        if($('#tel3').val() == ""){
          alert('전화번호를 정확히 입력해주세요!');
          $('#tel3').focus();
          return;
        }
        var tel = $('#tel1').val() + "-" + $('#tel2').val() + "-" + $('#tel3').val();
        $('#tel').val(tel);

        if($('#address').val() == ""){
          alert('주소를 꼭 입력해주세요!');
          $('#address').focus();
          return;
        }

        if($('#birth').val() == ""){
          alert('생일을 꼭 입력해주세요!');
          $('#birth').focus();
          return;
        }else if($('#birth').val().length != 8) {
          alert('생일 8자리를 꼭 입력해주세요!');
          $('#birth').val("");
          $('#birth').focus();
          return;
        }else if( isNaN( $('#birth').val() ) ){
          alert('생일은 숫자로 꼭 입력해주세요!');
          $('#birth').val("");
          $('#birth').focus();
          return;
        }

        $('#joinform').submit(); // 전송
      });
    });
  </script>
</head>
<body>
<div class="container">
  <div class="row">

    <h1><%= title %></h1>

    <form action="/members/join" method="post" id="joinform" class="form-inline">
      <table class="table table-condensed">
        <tr>
          <th width="100"><label for="id">아이디</label></th>
          <td><input type="text" name="id" id="id" size="30" maxlength="12" class="form-control"/></td>
        </tr>
        <tr>
          <th><label for="passwd">비밀번호</label></th>
          <td><input type="password" name="passwd" id="passwd" size="30" maxlength="12" class="form-control"/></td>
        </tr>
        <tr>
          <th><label for="name">이름</label></th>
          <td><input type="text" id="name" name="name" size="10" maxlength="10" class="form-control"/></td>
        </tr>
        <tr>
          <th><label for="email">이메일</label></th>
          <td><input type="email" id="email" name="email" size="30" maxlength="30" class="form-control"/></td>
        </tr>
        <tr>
          <th>전화번호</th>
          <td>
            <input type="hidden" id="tel" name="tel" class="form-control"/>
            <select name="tel1" id="tel1" class="form-control">
              <option value="010">010</option>
              <option value="011">011</option>
              <option value="016">016</option>
              <option value="017">017</option>
              <option value="018">018</option>
              <option value="019">019</option>
            </select>
            _ <input type="text" id="tel2" name="tel2" size="4" maxlength="4" class="form-control"/>
            _ <input type="text" id="tel3" name="tel3" size="4" maxlength="4" class="form-control"/>
          </td>
        </tr>
        <tr>
          <th>주소</th>
          <td><input type="text" id="address" name="address" size="60" maxlength="30" class="form-control"/></td>
        </tr>
        <tr>
          <th>직업</th>
          <td>
            <select name="job" id="job" class="form-control">
              <option value="학생">학생</option>
              <option value="직장인">직장인</option>
              <option value="주부">주부</option>
            </select>
          </td>
        </tr>
        <tr>
          <th>성별</th>
          <td>
            <input type="radio" name="gender" value="남" class="form-control" checked/> 남
            <input type="radio" name="gender" value="여" class="form-control"/> 여
          </td>
        </tr>
        <tr>
          <th>생년월일</th>
          <td>
            <input type="text" id="birth" name="birth" size="8" maxlength="8" class="form-control"/> **YYYYMMDD
          </td>
        </tr>
        <tr>
          <td colspan="2">
            <input type="button" id="btn_join" value="가입" class="btn btn-primary"/>
            <input type="button" value="이전" class="btn btn-danger" onclick="history.back();"/>
          </td>

        </tr>
      </table>

    </form>
  </div>
</div>

</body>
</html>
